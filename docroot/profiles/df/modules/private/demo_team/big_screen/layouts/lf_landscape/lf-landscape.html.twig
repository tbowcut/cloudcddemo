{#
/**
 * @file
 * Template for large screen presentation (TV)
 *
 */
#}
<div {{ attributes.setAttribute('id', settings.css_id).addClass('lf-landscape-layout', settings.css_classes) }}>
  <div class="row lf-landscape-chrome align-center">
    <div class="columns">
      <div class="row align-middle">
        <div class="small-6 lf-left columns">
          {{ content.left }}
        </div>
        <div class="small-6 lf-right columns">
          {{ content.right }}
        </div>
      </div>
      <div class="row align-center">
        <div class="columns"> {{ content.bottom }} </div>
      </div>
    </div>
  </div>
</div>


<!-- /.lf-landscape -->
