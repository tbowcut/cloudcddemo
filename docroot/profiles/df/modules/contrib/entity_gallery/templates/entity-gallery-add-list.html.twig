{#
/**
 * @file
 * Default theme implementation to list entity gallery types available for
 * adding entity galleries.
 *
 * This list is displayed on the Add entity galleries admin page.
 *
 * Available variables:
 * - types: A list of entity gallery types, each with the following properties:
 *   - add_link: Link to create an entity gallery of this type.
 *   - description: Description of this type of entity gallery.
 *
 * @see template_preprocess_entity_gallery_add_list()
 *
 * @ingroup themeable
 */
#}
{% if types is not empty %}
  <dl>
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
      <dd>{{ type.description }}</dd>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_entity_gallery = path('entity_gallery.type_add') %}
    {% trans %}
      You have not created any gallery types yet. Go to the <a href="{{ create_entity_gallery }}">gallery type creation page</a> to add a new gallery type.
    {% endtrans %}
  </p>
{% endif %}
