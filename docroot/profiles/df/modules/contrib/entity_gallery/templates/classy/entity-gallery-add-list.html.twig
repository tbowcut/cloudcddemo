{#
/**
 * @file
 * Theme override to list entity gallery types available for adding galleries.
 *
 * This list is displayed on the Add gallery admin page.
 *
 * Available variables:
 * - types: A list of gallery types, each with the following properties:
 *   - add_link: Link to create a piece of gallery of this type.
 *   - description: Description of this type of gallery.
 *
 * @see template_preprocess_entity_gallery_add_list()
 */
#}
{% if types is not empty %}
  <dl class="entity-gallery-type-list">
    {% for type in types %}
      <dt>{{ type.add_link }}</dt>
      <dd>{{ type.description }}</dd>
    {% endfor %}
  </dl>
{% else %}
  <p>
    {% set create_gallery = path('entity_gallery.type_add') %}
    {% trans %}
      You have not created any gallery types yet. Go to the <a href="{{ create_gallery }}">gallery type creation page</a> to add a new gallery type.
    {% endtrans %}
  </p>
{% endif %}
