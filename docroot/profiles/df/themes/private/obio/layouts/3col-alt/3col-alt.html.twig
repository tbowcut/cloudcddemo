{#
/**
 * @file
 * Template for landing pages
 *
 * Variables:
 * - $id: An optional CSS id to use for the layout.
 * - $content: An array of content, each item in the array is keyed to one
 *   panel of the layout. This layout supports the following sections:
 *   $content['middle']: The only panel in the layout.
 */
#}
<div class="three-col-alt-layout clearfix" {% if css_id %}{{ css_id }}{% endif %}>
  <div class="row">
    <div class="small-12 columns">
      {{ content.top }}
    </div>
  </div>
  <div class="row medium-unstack full-block-spacing">
    <div class="columns">
      {{ content.top_left }}
    </div>
    <div class="columns">
      {{ content.top_right }}
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      {{ content.middle }}
    </div>
  </div>
  <div class="row medium-unstack">
    <div class="columns">
      {{ content.bottom_left }}
    </div>
    <div class="columns">
      {{ content.bottom_middle }}
    </div>
    <div class="columns">
      {{ content.bottom_right }}
    </div>
  </div>
  <div class="row">
    <div class="small-12 columns">
      {{ content.footer }}
    </div>
  </div>
</div>
